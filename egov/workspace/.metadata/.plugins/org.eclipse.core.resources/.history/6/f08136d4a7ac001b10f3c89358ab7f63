					  //alert("Vue : " + grpcd + " : " + detailcd);
					  
					  fn_editComnDetailCod(grpcd,detailcd);
				  }
			  }      
			});	  		
		
		groupeditvue = new Vue({
			  el: '#groupeditvue',
			  data: {
				        grp_cod : ""
				       ,grp_cod_nm : ""
				       ,grp_cod_eplti : ""
				       ,grp_use_poa : ""
				       ,grp_use_poa_1: ""
				       ,grp_use_poa_2:""
			  },
