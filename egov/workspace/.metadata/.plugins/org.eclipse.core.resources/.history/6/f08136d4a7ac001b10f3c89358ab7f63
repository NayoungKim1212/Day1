	function fn_groupsearch(pageindex) {
		
		pageindex = pageindex || 1;
		
		var param = {
				currentPage : pageindex
			  ,	pageSize : pageSizeComnGrpCod
		};
		
		var resultCallback = function(data) {
			flistGrpCodResult(data, pageindex);
		};
		
		//Ajax실행 방식
		//callAjax("Url",type,return,async or sync방식,넘겨준거,값,Callback함수 이름)
		callAjax("/system/listComnGrpCodvue.do", "post", "json", true, param, resultCallback);
		
	}
	
	function flistGrpCodResult(data, pageindex) {
		
		groupvue.items = [];
		groupvue.items = data.listComnGrpCodModel;
		
		$("#currentPageComnGrpCod").val(pageindex);
	}
	

	/** 상세코드 목록 조회 */
	function fListComnDtlCod(currentPage, grp_cod) {
		
		currentPage = currentPage || 1;
		
		// 그룹코드 정보 설정
				
		var param = {
					grp_cod : grp_cod
				,	currentPage : currentPage
				,	pageSize : pageSizeComnDtlCod
		}
		
		var resultCallback = function(data) {
			flistDtlCodResult(data, currentPage);
		};
		
		callAjax("/system/listComnDtlCodvue.do", "post", "json", true, param, resultCallback);
	}
	
	function flistDtlCodResult(data, currentPage) {
		
		detailvue.items = [];
		detailvue.items = data.listComnDtlCodModel;
		
	}
	
	function fPopModalComnGrpCod() {
		gfModalPop("#layer1");
		
	}
	
	function fSaveGrpCod() {
		
		console.log(" grp_cod : " + groupeditvue.grp_cod);
		console.log(" grp_cod_nm : " + groupeditvue.grp_cod_nm);
		console.log(" grp_cod_eplti : " + groupeditvue.grp_cod_eplti);
		console.log(" grp_use_poa : " + groupeditvue.grp_use_poa);

		// vaildation 체크
		if ( ! fValidateGrpCod() ) {
			return;
		}
		
		var param = {
				grp_cod : groupeditvue.grp_cod
			,   grp_cod_nm : groupeditvue.grp_cod_nm
			,   grp_cod_eplti : groupeditvue.grp_cod_eplti
			,   grp_use_poa : groupeditvue.grp_use_poa
			,   action : "I"	
		}
		
		
		var resultCallback = function(data) {
			fSaveGrpCodResult(data);
		};
		
		callAjax("/system/saveComnGrpCod.do", "post", "json", true, param, resultCallback);
	}
	
	
	/** 그룹코드 저장 콜백 함수 */
	function fSaveGrpCodResult(data) {
		
		console.log("fSaveGrpCodResult : " + JSON.stringify(data));
		
		// 목록 조회 페이지 번호
		var currentPage = "1";
		if ($("#action").val() != "I") {
			currentPage = $("#currentPageComnGrpCod").val();
		}
		
		if (data.result == "SUCCESS") {
			
			// 응답 메시지 출력
			alert(data.resultMsg);
			
			// 모달 닫기
			gfCloseModal();
			
			// 목록 조회
			fn_groupsearch(currentPage);
			
		} else {
			// 오류 응답 메시지 출력
			alert(data.resultMsg);
		}
		
		// 입력폼 초기화
		fInitFormGrpCod();
	}	

	/** 그룹코드 저장 validation */
	function fValidateGrpCod() {

		var chk = checkNotEmpty(
				[
						[ "grp_cod", "그룹 코드를 입력해 주세요." ]
					,	[ "grp_cod_nm", "그룹 코드 명을 입력해 주세요" ]
					,	[ "grp_cod_eplti", "그룹 코드 설명을 입력해 주세요." ]
				]
		);

		if (!chk) {
			return;
		}

		return true;
	}	
	
	function fInitFormGrpCod() {
		groupeditvue.grp_cod = "";
		groupeditvue.grp_cod_nm = "";
		groupeditvue.grp_cod_eplti = "";
		groupeditvue.grp_use_poa = "";
	}
	
	function setFormGrpCod(object) {
		groupeditvue.grp_cod = object.grp_cod;
		groupeditvue.grp_cod_nm = object.grp_cod_nm;
		groupeditvue.grp_cod_eplti = object.grp_cod_eplti;
		groupeditvue.grp_use_poa = object.use_poa;
		
	}	
	
	function fneditgroupcode(grpcd) {	
		
		alert("fneditgroupcode grp_cod : " + grp_cod) ;
		console.log("fneditgroupcode grp_cod : " + grp_cod) ;
		
		
		  var param = { grp_cod : grp_cod };
			
		  var resultCallback = function(data) {
				fSelectGrpCodResult(data);
		};
			
		callAjax("/system/selectComnGrpCod.do", "post", "json", true, param, resultCallback);

		
	 }
	
	function fSelectGrpCodResult(data){	
		
		  console.log("fSelectGrpCodResult data.result : " + data.result) ;
		  if (data.result == "SUCCESS") {

				// 모달 팝업
				gfModalPop("#layer1");
				
				console.log("fSelectGrpCodResult : " + JSON.stringify(data));
				
				
				// 그룹코드 폼 데이터 설정
				setFormGrpCod(data.comnGrpCodModel);
				
			} else {
				alert(data.resultMsg);
			}	
		  
	  }	
	
