<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN" "http://ibatis.apache.org/dtd/sql-map-2.dtd">
<sqlMap namespace="Sample">

    <typeAlias  alias="UserVO" type="com.nexacro.Login.vo.UserVO"/>

<!-- Sample resultObject -->
    <resultMap id="user" class="UserVO">
        <result property="userId" column="loginID" />
        <result property="usertype" column="user_type" />
    </resultMap>
    
 	<select id="user.login" parameterClass="UserVO" resultMap="user">
             SELECT
	                loginID
	               ,user_type 
            FROM tb_userinfo  
            WHERE loginID = #searchKeyword#
	          AND password = #userPassword#
               
    </select>
            
    </select>
    
    <select id="nexacroSample.selectSampleMapList" parameterClass="Map" resultMap="sampleMap">
            SELECT
                A.TITLE AS TITLE, 
                A.REG_ID AS REG_ID, 
                A.REG_DATE AS REG_DATE, 
                A.POST_ID AS POST_ID, 
                A.CONTENTS AS CONTENTS, 
                A.COMMUNITY_ID AS COMMUNITY_ID,
                A.HIT_COUNT AS HIT_COUNT
            FROM TB_BOARD A
            WHERE 1=1
            <dynamic>
                <isNotNull property="searchKeyword">
                    <isEqual prepend=" AND " property="searchCondition" compareValue="TITLE">
                        TITLE LIKE '%' || #searchKeyword# || '%'
                    </isEqual>
                    <isEqual prepend=" AND " property="searchCondition" compareValue="CONTENTS">
                        CONTENTS LIKE '%' || #searchKeyword# || '%' 
                    </isEqual>
                </isNotNull>
            </dynamic>
    </select>
    
    <select id="nexacroSample.selectSampleCount" parameterClass="nexacroSampleVO" resultClass="int">
            SELECT
                COUNT(*) as totalCount
            FROM TB_BOARD A
            WHERE 1=1
            <dynamic>
                <isNotNull property="searchKeyword">
                    <isEqual prepend=" AND " property="searchCondition" compareValue="TITLE">
                        TITLE LIKE '%' || #searchKeyword# || '%'
                    </isEqual>
                    <isEqual prepend=" AND " property="searchCondition" compareValue="CONTENTS">
                        CONTENTS LIKE '%' || #searchKeyword# || '%' 
                    </isEqual>
                </isNotNull>
            </dynamic>
    </select>
    
	<select id="nexacroSample.selectSamplePaging" parameterClass="nexacroSampleVO" resultMap="sample">
            SELECT
                A.TITLE AS TITLE, 
                A.REG_ID AS REG_ID, 
                A.REG_DATE AS REG_DATE, 
                A.POST_ID AS POST_ID, 
                A.CONTENTS AS CONTENTS, 
                A.COMMUNITY_ID AS COMMUNITY_ID,
                A.HIT_COUNT AS HIT_COUNT
            FROM TB_BOARD A
            WHERE 1=1
            <dynamic>
                <isNotNull property="searchKeyword">
                    <isEqual prepend=" AND " property="searchCondition" compareValue="TITLE">
                        TITLE LIKE '%' || #searchKeyword# || '%'
                    </isEqual>
                    <isEqual prepend=" AND " property="searchCondition" compareValue="CONTENTS">
                        CONTENTS LIKE '%' || #searchKeyword# || '%' 
                    </isEqual>
                </isNotNull>
            </dynamic>
            ORDER BY A.REG_ID DESC 
            LIMIT #recordCountPerPage# OFFSET #firstIndex#
    </select>
    
    <insert id="nexacroSample.insertSampleVO" parameterClass="nexacroSampleVO">
        <![CDATA[
            INSERT INTO TB_BOARD (
                TITLE,
                REG_ID,
                CONTENTS,
                COMMUNITY_ID
            ) VALUES (
                #title#,
                #regId#,
                #contents#,
                #communityId#
            )
        ]]>
    </insert>
    
      <update id="nexacroSample.updateSampleVO" parameterClass="nexacroSampleVO">
        <![CDATA[
            UPDATE TB_BOARD 
            SET TITLE=#title#
                , REG_ID=#regId#
                , CONTENTS=#contents#
                , COMMUNITY_ID=#communityId#
            WHERE POST_ID=#postId#
        ]]>
    </update>
    
    <delete id="nexacroSample.deleteSampleVO" parameterClass="nexacroSampleVO">
        <![CDATA[
            DELETE FROM TB_BOARD 
            WHERE POST_ID=#postId#
        ]]>
    </delete>
    
    
    <insert id="nexacroSample.insertSampleMap" parameterClass="Map">
        <![CDATA[
            INSERT INTO TB_BOARD (
                TITLE,
                REG_ID,
                CONTENTS,
                COMMUNITY_ID
            ) VALUES (
                #title#,
                #regId#,
                #contents#,
                #communityId#
            )
        ]]>
    </insert>
    
      <update id="nexacroSample.updateSampleMap" parameterClass="Map">
        <![CDATA[
            UPDATE TB_BOARD 
            SET TITLE=#title#
                , REG_ID=#regId#
                , CONTENTS=#contents#
                , COMMUNITY_ID=#communityId#
            WHERE POST_ID=#postId#
        ]]>
    </update>
    
    <delete id="nexacroSample.deleteSampleMap" parameterClass="Map">
        <![CDATA[
            DELETE FROM TB_BOARD 
            WHERE POST_ID=#postId#
        ]]>
    </delete>
</sqlMap>
