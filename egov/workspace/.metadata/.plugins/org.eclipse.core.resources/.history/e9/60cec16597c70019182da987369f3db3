 	<select id="user.login" parameterClass="MAP" resultClass="java.util.HashMap" remapResults="true">
             SELECT
	                loginID
	               ,user_type
	               ,name
            FROM tb_userinfo  
            WHERE loginID = #id#
	          AND password = #password#
    </select>
    
 	<select id="user.loginvo" parameterClass="MAP" resultMap="user">
             SELECT
	                loginID AS LOGINID
	               ,user_type AS USER_TYPE
	               ,name AS NAME
            FROM tb_userinfo  
            WHERE loginID = #id#
	          AND password = #password#
    </select>    
    
    
    
    
